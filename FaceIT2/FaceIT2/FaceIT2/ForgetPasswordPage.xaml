<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaceIT2.ForgetPasswordPage"
             BackgroundColor="Azure"
             Title="Forgot Password">

    <StackLayout VerticalOptions="Start" 
                 HorizontalOptions="Start" 
                 Padding="5,20,5,0">
        
        <Label Text="Enter your email address to verify your account."/>


        <StackLayout Padding=" 5, 20,5,0">
            <Entry x:Name="Email" Keyboard="Email" Placeholder="Email"/>
            <Label x:Name="ErrorLabel1"/>
            <Button Text="Submit" Clicked="Btn_submit"  />
         
        </StackLayout>
    </StackLayout>
</ContentPage>