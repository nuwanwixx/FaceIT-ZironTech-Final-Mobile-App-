<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaceIT2.RenewPasswordPage"
             Title="Renew Password">
    <StackLayout Padding="10,10,5,0">

        <Entry x:Name="Number" Text="{Binding ResetCode}"  Placeholder="Code" />

        <Entry x:Name="Password" Text="{Binding Password}" IsPassword="True" Placeholder="Renew Password" />
        <Label x:Name="ErrorLabel1"/>
        
        <Entry x:Name="Confirm" IsPassword="True" Placeholder="Confirm Password"/>
        <Label x:Name="ErrorLabel2"/>
        
        <Button Text="Login" Clicked="Btn_Loggin"/>


    </StackLayout>
</ContentPage>